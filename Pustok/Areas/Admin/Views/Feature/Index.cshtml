@model List<Feature>

@{
    int counter = 0;
}

<div class="container">
    <div class="d-flex" style="justify-content:space-around; align-items:center">
        <h1>Features:</h1>
        <a class="btn btn-primary" asp-controller="feature" asp-action="create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">IconUrl</th>

                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Feature feature in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@feature.Id</td>
                    <td>@feature.Title</td>
                    <td>@feature.Description</td>
                    <td>@Html.Raw(feature.IconUrl)</td>
                    
                    <td>
                        <a class="btn btn-primary" asp-controller="feature" asp-action="update" asp-route-id="@feature.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="feature" asp-action="delete" asp-route-id="@feature.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
